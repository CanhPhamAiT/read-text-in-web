{
  "manifest_version": 3,
  "name": "Metruyencv Chapter Reader",
  "description": "Đọc to nội dung chương trên metruyencv.com và tự chuyển chương kế tiếp.",
  "version": "1.1.0",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://metruyencv.com/*",
    "https://tangthuvien.net/*",
    "http://localhost:5002/*",
    "http://127.0.0.1:5002/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Metruyencv Reader",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://metruyencv.com/truyen/*/chuong-*",
        "https://tangthuvien.net/doc-truyen/*/*"
      ],
      "js": [
        "tesseract.min.js",
        "contentScript.js"
      ],
      "run_at": "document_idle"
    }
  ]
}

